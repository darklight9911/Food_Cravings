{% extends "base.html" %}

{% block title %}Home{% endblock %}

{% block content %}
<div class="space-y-8">
    <!-- Hero Section -->
    <div class="relative bg-dark rounded-xl overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-r from-primary to-secondary opacity-90"></div>
        <div class="relative z-10 px-6 py-16 md:py-24 text-center text-white">
            <h1 class="text-4xl md:text-5xl font-bold mb-4">Welcome to Food Cravings</h1>
            <p class="text-lg md:text-xl opacity-90 max-w-2xl mx-auto">
                Your favorite campus dining destination for delicious meals
            </p>
            <div class="mt-8">
                <a href="/menu" class="bg-white text-primary px-8 py-3 rounded-full font-medium hover:bg-opacity-90 transition-colors">
                    View Menu
                </a>
            </div>
        </div>
    </div>

    <!-- Notice Board Section -->
    {% if notices %}
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="bg-primary bg-opacity-10 px-6 py-4 border-b border-primary border-opacity-20">
            <h2 class="text-xl font-semibold text-primary">Latest Updates</h2>
        </div>
        <div class="divide-y divide-gray-200">
            {% for notice in notices %}
            <div class="p-6 hover:bg-gray-50 transition-colors">
                <div class="flex items-start space-x-4">
                    <div class="flex-shrink-0">
                        <div class="w-12 h-12 bg-primary bg-opacity-10 rounded-full flex items-center justify-center">
                            <i class="fas fa-bullhorn text-primary text-xl"></i>
                        </div>
                    </div>
                    <div class="flex-1">
                        <h3 class="text-lg font-semibold text-dark mb-1">{{ notice.title }}</h3>
                        <p class="text-gray-600 mb-2">{{ notice.content }}</p>
                        <p class="text-sm text-gray-500">
                            <i class="fas fa-clock mr-1"></i>
                            {{ notice.timestamp.strftime('%B %d, %Y at %I:%M %p') }}
                        </p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}

    <!-- Featured Items Section -->
    <div class="space-y-6">
        <div class="flex justify-between items-center">
            <h2 class="text-2xl font-semibold text-dark">Featured Items</h2>
            <a href="/menu" class="text-primary hover:text-primary-dark transition-colors flex items-center">
                View All <i class="fas fa-arrow-right ml-2"></i>
            </a>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for item in featured_items %}
            <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow">
                <div class="relative h-48">
                    <img src="{{ item.image_path or '/static/default-food.png' }}" 
                         alt="{{ item.name }}"
                         class="w-full h-full object-cover">
                    <div class="absolute top-4 right-4">
                        <span class="bg-white px-3 py-1 rounded-full text-primary font-semibold shadow-md">
                            ${{ "%.2f"|format(item.price) }}
                        </span>
                    </div>
                </div>
                <div class="p-6">
                    <div class="flex justify-between items-start mb-2">
                        <h3 class="text-xl font-semibold text-dark">{{ item.name }}</h3>
                        <span class="text-sm text-gray-500 capitalize">
                            <i class="fas fa-clock mr-1"></i>
                            {{ item.shift }}
                        </span>
                    </div>
                    <p class="text-gray-600 mb-4">{{ item.description }}</p>
                    
                    {% if session.get('user_id') %}
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-2">
                            <button onclick="decreaseQuantity('{{ item.id }}')"
                                class="w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center text-gray-600 hover:bg-gray-200">
                                <i class="fas fa-minus"></i>
                            </button>
                            <span id="quantity-{{ item.id }}" class="w-8 text-center">1</span>
                            <button onclick="increaseQuantity('{{ item.id }}')"
                                class="w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center text-gray-600 hover:bg-gray-200">
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                        <button onclick="addToOrder('{{ item.id }}')"
                            class="bg-primary text-white px-4 py-2 rounded-full hover:bg-opacity-90 transition-colors flex items-center">
                            <i class="fas fa-shopping-cart mr-2"></i>
                            Order Now
                        </button>
                    </div>
                    {% else %}
                    <a href="/login" class="block text-center bg-primary text-white px-4 py-2 rounded-full hover:bg-opacity-90 transition-colors">
                        <i class="fas fa-sign-in-alt mr-2"></i>
                        Login to Order
                    </a>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

    <!-- Features Section -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <div class="w-16 h-16 bg-primary bg-opacity-10 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-utensils text-primary text-2xl"></i>
            </div>
            <h3 class="text-lg font-semibold text-dark mb-2">Fresh & Delicious</h3>
            <p class="text-gray-600">We prepare all meals fresh daily using quality ingredients</p>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <div class="w-16 h-16 bg-secondary bg-opacity-10 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-truck text-secondary text-2xl"></i>
            </div>
            <h3 class="text-lg font-semibold text-dark mb-2">Quick Service</h3>
            <p class="text-gray-600">Fast preparation and delivery within the campus</p>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <div class="w-16 h-16 bg-purple-500 bg-opacity-10 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-star text-purple-500 text-2xl"></i>
            </div>
            <h3 class="text-lg font-semibold text-dark mb-2">Quality Assured</h3>
            <p class="text-gray-600">Regular quality checks and hygiene maintenance</p>
        </div>
    </div>
</div>

<script>
// Quantity management
function decreaseQuantity(itemId) {
    const quantityElement = document.getElementById(`quantity-${itemId}`);
    let quantity = parseInt(quantityElement.textContent);
    if (quantity > 1) {
        quantityElement.textContent = quantity - 1;
    }
}

function increaseQuantity(itemId) {
    const quantityElement = document.getElementById(`quantity-${itemId}`);
    let quantity = parseInt(quantityElement.textContent);
    quantityElement.textContent = quantity + 1;
}

// Order management
function addToOrder(itemId) {
    const quantity = parseInt(document.getElementById(`quantity-${itemId}`).textContent);
    fetch('/orders/add', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({
            item_id: itemId,
            quantity: quantity
        })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Show success notification
            const notification = document.createElement('div');
            notification.className = 'fixed bottom-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg animate-fade-in';
            notification.innerHTML = '<i class="fas fa-check-circle mr-2"></i>Added to order successfully!';
            document.body.appendChild(notification);
            
            // Remove notification after 3 seconds
            setTimeout(() => {
                notification.remove();
            }, 3000);
        }
    });
}
                                                    Order
                                                </button>
                                            </form>
                                            
                                            {% if item.feedbacks %}
                                                {% set total_rating = namespace(value=0) %}
                                                {% for feedback in item.feedbacks %}
                                                    {% set total_rating.value = total_rating.value + feedback.rating %}
                                                {% endfor %}
                                                <div class="text-yellow-500">
                                                    â˜… {{ "%.1f"|format(total_rating.value / item.feedbacks|length) }}
                                                </div>
                                            {% endif %}
                                        </div>
                                    {% else %}
                                        <p class="mt-4 text-gray-600">Please <a href="{{ url_for('login') }}" class="text-blue-600">login</a> to order.</p>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-gray-600">No items available for {{ shift }}.</p>
                {% endif %}
            </div>
        {% endfor %}
    </div>
{% endblock %}